@model TrenModel

<style>

    .btn {
        margin: auto;
        display: block;
        width: 25%;
        margin-bottom:.5%
    }

</style>

@*Acomode un poquito mejor los elementos*@

<div class="container">

    @using (Html.BeginForm("AgregarVagon", "Home", new { Vagones = @Model.Vagones }, FormMethod.Post))
    {
        <div class="row" style="margin:auto;display:block;padding:1%">
            <button class="btn btn-primary" type="submit" name="submit" value="Izquierda">Agregar vagon a la izquierda</button>
            <button class="btn btn-primary" type="submit" name="submit" value="Derecha">Agregar vagon a la derecha</button>

        </div>

        <div class="row">
            <input type="text" id="idTextNroVagon" placeholder="Completar con Nro de Vagon" name="NroVagon" style="margin:auto;display:block;width:25%">
        </div>

    }


    @using (Html.BeginForm("RemoverVagon", "Home", new { Vagones = @Model.Vagones }, FormMethod.Post))
    {
        <div class="row" style="margin:auto;display:block;padding:1%">
            <button class="btn btn-danger" type="submit" name="submit" value="Izquierda">Remover vagon a la izquierda</button>
            <button class="btn btn-danger" type="submit" name="submit" value="Derecha">Remover vagon a la derecha</button>

        </div>

    }

    <div class="row" style="margin:auto;display:block;width:25%">
    <h5>TREN: </h5>
    <p> @Model.Tren </p>
</div>

</div>

